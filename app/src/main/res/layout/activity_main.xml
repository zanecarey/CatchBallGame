<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.zane.catchball.main">

    <TextView
        android:id="@+id/scoreLabel"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Score : 500"
        android:textSize="18sp"
        android:paddingLeft="10dp"
        android:gravity="center_vertical" />

    <FrameLayout
        android:id="@+id/frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/startLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tap to Start"
            android:textSize="30dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="130dp"/>

        <ImageView
            android:id="@+id/pacman"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/pacman"
            android:layout_gravity="center_vertical"/>

        <ImageView
            android:id="@+id/dot"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/yellowdot" />

        <ImageView
            android:id="@+id/blinky"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/blinky"/>

        <ImageView
            android:id="@+id/cherry"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/cherry"/>

    </FrameLayout>

</LinearLayout>
